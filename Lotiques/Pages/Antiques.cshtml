@page
@model Lotiques.Pages.AntiquesModel
@{
}

@{
    /*
    * <a class="nav-link text-dark" asp-area="" asp-page="/CheckOut/CheckOut">Check out</a>
       <a class="nav-link text-dark" asp-area="" asp-page="/Forms/SpecialAntiques">Special Antiques</a>
    */
}

<div class="text-center">
    <h1 class="display-4 text-black text-capitalize">Best of the best</h1>
    <p class="smallText">every order is only under 10KG</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-12 mt-5 mb-5">
            <div class="w-100 row backDiv">
                <div class="col-4">
                    <img class="w-100 " style="border-radius: 20px;" src="~/Images/1.jpg" />
                </div>
                <div class="col-8 align-items-center">
                    <div class="align-middle">
                        <h3 style="text-align:left; color:white">Create your own antiques </h3>
                        <p style="color:white;"> Create your antiques (hand-made or 3D printed)</p>
                        <a class="btn btn-primary" style="float:left;" asp-area="" asp-page="/Forms/SpecialAntiques">Try Now</a>
                    </div>
                </div>
            </div>
        </div>
        @foreach (var antique in Model.DB)
        {
            var imagePath = "~/images/" + antique.ImageTitle;
            <div class="col-4 mb-5">
                <img src="@imagePath" class="w-100 mainImage" asp-append-version="true" />
                <a class="btn btn-primary mt-1" asp-area="" asp-page="CheckOut/CheckOut"
                asp-route-ImageTitle="@antique.ImageTitle" asp-route-Name="@antique.Name"
                asp-route-Price ="@antique.FinalPrice">Order </a>
                <br />
            </div>

        }

    </div>

</div>